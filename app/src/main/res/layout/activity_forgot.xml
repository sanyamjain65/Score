<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    tools:context="mypocketvakil.example.com.score.activity.Forgot">
    <RelativeLayout
        android:layout_width="44sp"
        android:layout_height="45sp"
        android:background="@android:color/white"
       android:layout_marginLeft="155sp"
        android:layout_marginTop="114sp"></RelativeLayout>
    <RelativeLayout
        android:layout_width="5sp"
        android:layout_height="5sp"
        android:background="@android:color/white"
        android:layout_marginLeft="181sp"
        android:layout_marginTop="111sp"></RelativeLayout>


    <RelativeLayout
        android:layout_width="325sp"
        android:layout_height="250sp"
        android:background="@drawable/relative"
        android:id="@+id/rl_forgot"
        android:layout_centerInParent="true"
        >
        <mypocketvakil.example.com.score.custom.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_forgot_text"
            android:layout_marginTop="50sp"
            android:text="Please Enter your Registered Email Address"
            android:textColor="@color/bg_color"
            android:textAlignment="center"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:textSize="22sp"
            app:font="@string/OpenSans_Semibold"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"

            android:id="@+id/ll_forgot_email"
            android:orientation="horizontal"
            android:layout_marginBottom="37dp"
            android:background="@drawable/et_bg"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/email"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_forgot_email"/>
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@android:color/white"
                android:layout_marginLeft="15dp"
                />
            <mypocketvakil.example.com.score.custom.CustomEditText

                android:id="@+id/et_forgot_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:layout_gravity="center"

                android:textColor="@android:color/white"
                android:singleLine="true"
                android:hint="Email Address"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"


                android:textColorHint="@color/text_hint_color"
                android:background="@null"
                android:textSize="22sp"
                app:font="@string/OpenSans_Reguler"
                />



        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/iv_forgot"
        android:src="@drawable/thinkers"

        android:layout_marginTop="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <mypocketvakil.example.com.score.custom.CustomTextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_forgot_send"

        android:layout_height="wrap_content"



        android:textColor="@android:color/white"

        android:text="SEND"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_below="@+id/rl_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:background="@drawable/signup_button"
        android:textSize="25sp"
        app:font="@string/OpenSans_Reguler"
        />

</RelativeLayout>
