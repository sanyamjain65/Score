<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="mypocketvakil.example.com.score.activity.Account">
    <include layout="@layout/toolbar"
        android:id="@+id/account_toolbar"/>
    <mypocketvakil.example.com.score.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_account_mail"
        android:text="@string/mail"
        android:textColor="@color/bg_color"
        android:textSize="20sp"
        android:paddingLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:layout_below="@+id/account_toolbar"
        app:font="@string/OpenSans_Reguler"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_account_mail"
        android:background="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:id="@+id/account_view1"
        />
    <mypocketvakil.example.com.score.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_account_gender"

        android:text="@string/gender"
        android:textColor="@color/bg_color"
        android:textSize="20sp"
        android:paddingLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:layout_below="@+id/account_view1"
        app:font="@string/OpenSans_Reguler"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_account_gender"
        android:background="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:id="@+id/account_view2"
        />
    <mypocketvakil.example.com.score.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_account_number"

        android:text="@string/number"
        android:textColor="@color/bg_color"
        android:textSize="20sp"
        android:paddingLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:layout_below="@+id/account_view2"
        app:font="@string/OpenSans_Reguler"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_account_number"
        android:background="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:id="@+id/account_view4"
        />
    <mypocketvakil.example.com.score.custom.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_account_dob"

        android:text="@string/dob"
        android:textColor="@color/bg_color"
        android:textSize="20sp"
        android:paddingLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:layout_below="@+id/account_view4"
        app:font="@string/OpenSans_Reguler"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_account_dob"
        android:background="@android:color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:id="@+id/account_view5"
        />



    <ProgressBar
        android:id="@+id/account_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
