<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_loc"
    tools:context="mypocketvakil.example.com.score.activity.Location">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
    <!--
    <mypocketvakil.example.com.score.custom.CustomTextView
        android:layout_width="match_parent"
        android:id="@+id/tv_map"

        android:layout_height="wrap_content"



        android:textColor="@android:color/holo_red_dark"

        android:text="@string/maptext"

        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/fab_margin"
        app:font="@string/OpenSans_Reguler"
        />
        -->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/swap"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/tv_confirm"
        android:layout_marginBottom="60dp"
        android:id="@+id/iv_swap"
        android:layout_marginRight="6dp"/>
    <mypocketvakil.example.com.score.custom.CustomTextView
        android:layout_width="match_parent"
        android:id="@+id/tv_confirm"

        android:layout_height="50dp"



        android:textColor="@android:color/white"

        android:text="@string/tap"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@color/AppColor"
        android:gravity="center"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"

        android:layout_marginBottom="6dp"
        android:textSize="15sp"
        app:font="@string/OpenSans_Reguler"
        />

</RelativeLayout>
